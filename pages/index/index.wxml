<import src="../../libs/weimport.wxml" />
<view class="page">
  <view class="page__hd">
    <swiper class="swiper_box" indicator-dots="{{false}}" autoplay="{{true}}">
      <block wx:for="{{mPage[0]}}" wx:key="{{index}}">
          <navigator url="/pages/vprocedure/vprocedure?pNo=1&artId={{item.objectId}}">
            <image src="{{pageData[item].thumbnail}}" class="swimage"></image>
            <view class="swtext">{{pageData[item].title}}</view>
          </navigator>
      </block>
    </swiper>
  </view>

  <view class="page__bd">
    <view class="weui-grids">
      <view wx:if="{{userAuthorize==-2}}">
        <text>欢迎使用创业服务平台</text>
      </view>
      <view wx:elif="{{userAuthorize==-1}}">
        <button open-type="getUserInfo" bindgetuserinfo="userInfoHandler">允许微信在本平台上登录</button>
      </view>
      <view wx:else>
        <block wx:for="{{grids}}" wx:key="{{index}}">
          <navigator url="{{item.tourl}}" class="weui-grid" hover-class="weui-grid_active">
            <image class="weui-grid__icon" src="{{item.mIcon}}"></image>
            <view class="weui-grid__label">{{item.mName}}</view>
          </navigator>
        </block>
      </view>
    </view>
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="{{index}}">
            <view id="{{index+1}}" class="weui-navbar__item {{ pageCk==index+1 ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
        <view class="weui-navbar__slider" style="left:{{wWidth/6-36}}px; transform: translateX(0px); -webkit-transform: translateX({{(pageCk-1)*wWidth/3}}px)"></view>
      </view>
      <template is="tabPanel" data="{{ tPage: fLength ? mPage[pageCk] : mPage , pageData , pNo }}"/>
    </view>
  </view>
  <template is="tabBar" data="{{tabBar,pName}}" />
</view>
