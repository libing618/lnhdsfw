page {
	font-size: 16px;
	color: #333;
}

/*每一行数据*/
.row {
  border:1px solid #000;
	background: white;
	padding: 0 20rpx;
	margin-bottom: 30rpx;
}

/*商户信息*/
.shop {
	display: flex;
	flex-direction: row;
	align-items: center;
}

/*logo*/
.logo {
	width: 40px;
	height: 40px;
	border-radius: 50%;
}

/*名称与状态*/
.summary {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	border-bottom: 1px solid #eee;
	height: 44px;
	align-items: center;
	flex: 1;
  
}

/*名称*/
.title {
  width: 80%;
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

/*状态*/
.status {
	font-size: 14px;
	text-align: right;
}

/*商品信息*/
.goods {
	display: flex;
	flex-direction: row;
  	border-bottom: 1px solid #eee;
	justify-content: space-between;
	align-items: center;
	font-size: 14px;
	height: 100%;
}

/*商品名称*/
.goods .title {
	color: #666;
}

/*商品小计*/
.goods .total {
	color: #000;
	text-align: right;
	font-weight: bold;
}

.goods .total:before {
	content: '￥';
}
