<import src="../../libs/weimport.wxml" />
<view class="navigationBar">
  <view class="navigationBar__column">
    <template is="navBarLogo"/>
    <view class="weui-cell__bd">扶贫济困，共享良品</view>
    <view class="weui-cell__ft">
      <view wx:if="{{signuped}}">
        <button class="weui-btn" style="top:6rpx" size="mini" bindtap="changeTiring">{{tiringRoom ? '退出' : '进入'}}管理界面</button>
      </view>
      <view wx:else>
        <button style="top:6rpx" size="mini" open-type="getUserInfo" bindgetuserinfo="userInfoHandler">合伙人注册</button>
      </view>
    </view>
  </view>
</view>
<view class="page">
  <view class="page__hd">
    <swiper class="swiper_box" indicator-dots="true" autoplay="{{autoplay}}">
      <block wx:for="{{images}}" wx:key="{{index}}">
        <swiper-item>
          <navigator url="../artview/artview?{{item.objectId}}">
            <image src="{{item.thumbnail}}" class="swimage"></image>
            <view class="swtext">{{item.arttitle}}</view>
          </navigator>
        </swiper-item>
      </block>
    </swiper>
	</view>

  <view class="page__bd">
    <template is="showgrids" data="{{grids}}"/>
  </view>

  <view class="weui-tab">
    <template is="tabPanel" data="{{ tPage: mPage , pageData , pNo }}"/>
  </view>
</view>
