/**app.wxss**/
@import 'libs/weui.wxss';

page{
    background-color: #FFFFFF;
    font-size: 28rpx;
    font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}
.page__hd {
    padding: 16rpx;
}
.page__top {
  position: fixed;
  padding-top: 0;
  text-align: center;
}
.page__bd {
    padding-bottom: 10rpx;
}
.page__bd_spacing {
    padding-left: 16rpx;
    padding-right: 16rpx;
}
.page__ac_spacing {
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.page__ft{
    padding-bottom: 10rpx;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 36rpx;
    font-weight: 400;
}

.page__desc {
    margin-top: 6rpx;
    color: #888888;
    text-align: left;
    font-size: 28rpx;
}
