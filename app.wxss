/**app.wxss**/
@import 'libs/weui.wxss';

page{
  background-color: #FFFFFF;
  font-size: 28rpx;
  padding-top: 100rpx;
    /* font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif; */
}
.page__hd {
  padding: 16rpx;
}
.navigationBar {
  position: fixed;
  top:0;
  z-index: 500;
  width: 100%;
  height: 102rpx;
  background-color: #F5F5F5;
  border-bottom: 1rpx solid #CCCCCC;
}
.navigationBar__column {
  position: relative;
  margin-top: 36rpx;
  margin-left: 30rpx;
  word-wrap: break-word;
  font-size: 26rpx;
  width: 560rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.navigationBar__icon {
  margin-right: 10rpx;
  vertical-align: middle;
  width: 54rpx;
  height: 54rpx;
}
.navigationBar__item {
  position: relative;

  width: 10em;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 26rpx 0;
  text-align: center;

}
.navigationBar__title {
  display: inline-block;
  font-size: 30rpx;
  max-width: 10em;
  width: auto;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-wrap: normal;
}
.navSearchBar__form {
  position: relative;
  word-wrap: break-word;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 480rpx;
  border-radius: 30rpx;
  background: #FFFFFF;
  border: 1rpx solid #E6E6EA;
}
.navigationBar__input {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  width: 430rpx;
  padding: 10rpx 0;
  text-align: center;
}
.navigationBar__btn_icon {
  position: inline-block;
  margin-top: 0rpx;
	margin-right: 10rpx;
  padding: 0 0;
  line-height: 46rpx;
  width: 50rpx;
  color: #3CC51F;
  text-align: center;
}
.navigationBar__price {
  display: inline-block;
	color: #f60;
  margin-top: 40rpx;
	margin-left: 10rpx;
  font-size: 34rpx;
}
.page__bd {
  padding-bottom: 10rpx;
}
.page__bd_spacing {
  padding-left: 16rpx;
  padding-right: 16rpx;
}
.page__ac_spacing {
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.page__ft{
    padding-bottom: 10rpx;
    text-align: center;
}

.page__title {
    text-align: center;
    font-size: 36rpx;
    font-weight: 400;
}

.page__desc {
    margin-top: 6rpx;
    color: #888888;
    text-align: left;
    font-size: 28rpx;
}
.summary {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	background: white;
	margin: 20rpx 0;
}

.introduce{
  display: flex;
	flex-direction: row;
	justify-content: space-between;
}

.goods__title {
	font-size: 40rpx;
	margin: 10rpx;
	line-height: 46rpx;
}

.goods__price {
	color: #f60;
	margin: 10rpx;
  font-size: 34rpx;
}

.goods__spec {
	margin: 10rpx;
}

.buy{
 	float: right;
	border: 0;
	line-height: 100rpx;
	text-align: center;
	width: 350rpx;
	height: 100rpx;
	background-color: #f60;
	color: white;
	font-size: 36rpx;
	border-radius: 0px;
}
.give{
  float: right;
	border: 0;
	line-height: 100rpx;
	text-align: center;
	width: 350rpx;
	height: 100rpx;
	background-color: red;
	color: white;
	font-size: 36rpx;
	border-radius: 0px;
}

/*购物车按钮、收藏等*/
.opt-buttons {
	width: 100%;
	display: flex;
	flex-direction: row-reverse;
	justify-content: space-around;
}

/*cart*/
.button-group {
	display: flex;
	flex-direction: column;
}

.button-image {
	width: 60rpx;
	height: 60rpx;
  margin-left: 15rpx
}

.button-text {
	font-size: 24rpx;
	line-height: 40rpx;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.close_icon {
  width: 25rpx;
  height: 25rpx;
  line-height: 20rpx;
  font-size: 30rpx;
  position: absolute;
  right: 5rpx;
  top:5rpx;
  padding: 10rpx;
  color: #ccc;
  border: 1rpx solid #ccc;
  border-radius: 50%;
  text-align: center;
  background: #fff;
}

.drawer_attr_content {
  padding: 20rpx;
  height: 600rpx;
  overflow-y: scroll;
}

.drawer_amount{
  font-size: 20px;
  text-align: center;
  margin-bottom: 30rpx;
}

.drawer_standard{
  display: block;
	border: 1px solid #e5e5e5;
	height: 40px;
	line-height: 40px;
	text-align: center;
	color: #232626;
	font-size: 14px;
	background-color: #f9f9f9;
}

.drawer_btn {
  width: 100%;
  border-radius: 10rpx;
  text-align: center;
  background: red;
  color: #fff;
}


.buy_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.buy_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}

.buy_attr_content {
  padding: 20rpx;
  height: 600rpx;
  overflow-y: scroll;
}

.buy_amount{
  font-size: 20px;
  text-align: center;
  margin-bottom: 30rpx;
}

.buy_standard{
  display: block;
	border: 1px solid #e5e5e5;
	height: 40px;
	line-height: 40px;
	text-align: center;
	color: #232626;
	font-size: 14px;
	background-color: #f9f9f9;
}

.buy_btn {
  width: 100%;
